
<div id="page-content">
  <h1 class="text-center mt-4">Listing all articals</h1>
  
  <div class="container">
    <% @articals.each do |artical| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by Tushar Bhole
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to artical.title, articals_path(@artical), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(artical.description,length:100) %></p>
              <%= link_to "Edit", edit_artical_path(artical), class: "btn btn-outline-info" %>
              <%= link_to "Delete", artical_path(artical), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= artical.created_at %> ago,
                edited <%= artical.updated_at %>ago</small>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
